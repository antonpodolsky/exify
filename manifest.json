{
  "name": "Exify",
  "version": "1.0.5",
  "description": "View essential EXIF information",
  "homepage_url": "https://www.exify.info/",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": [
        "dialog-polyfill.css",
        "exify.css",
        "exif.css",
        "overlay.css",
        "settings.css"
      ]
    }
  ],
  "web_accessible_resources": ["icons/icon48.png"],
  "permissions": ["*://*/*", "storage"],
  "manifest_version": 2
}
