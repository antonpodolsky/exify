{
  "name": "Exify",
  "version": "1.0.0",
  "description": "Easily view essential EXIF info",
  "homepage_url": "https://www.exify.info/",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "web_accessible_resources": ["icons/icon48.png"],
  "permissions": ["*://*/*"],
  "manifest_version": 2
}
