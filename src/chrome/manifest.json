{
  "name": "Exify",
  "version": "1.0",
  "description": "View EXIF of images on the page",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "permissions": [],
  "manifest_version": 2
}
