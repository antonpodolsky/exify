{
  "name": "Exify",
  "version": "1.0",
  "description": "Hover images to show EXIF metadata",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "permissions": [],
  "manifest_version": 2
}
